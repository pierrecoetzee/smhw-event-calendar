<%= form_for @event, remote: true do |f| %>
	
	<%
		 error = 'alert alert-danger'
	%>
  <fieldset class="form-group">
		<label for="event_start_date">Start date:</label>
		<%= f.text_field :start_date, class: "form-control #{ error_for?(:start_date) ? error : '' }"%> 
  </fieldset>  			
  
  <fieldset class="form-group">
	  <label for="event_end_date">End date : </label>
	  	<%= f.text_field :end_date,  class: "form-control #{ error_for?(:end_date) ? error : '' }"%>
	</fieldset>  				  

	<fieldset class="form-group">
	  <label for="event_title">Title :</label>
	  <%= f.text_field :title, class: "form-control #{ error_for?(:title) ? error : '' }"%>
	</fieldset>  

	<fieldset class="form-group">
	  <label for="event_subject">Subject :</label>
	  <%= f.text_field :subject, class: "form-control #{ error_for?(:subject) ? error : '' }"%>
	</fieldset>  					  

	<fieldset class="form-group">
		<%= f.submit class: 'btn btn-primary pull-right' %>
  </fieldset>  	
<% end %>

<script>
  $(function(){
  	$('#event_start_date,#event_end_date').datepicker({
  		todayHighlight: true,
  		 autoclose: true,
  		 format: "yyyy-mm-dd",
  	})
  })
</script>